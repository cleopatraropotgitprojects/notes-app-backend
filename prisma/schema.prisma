datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Note {
  id          String   @id @default(cuid())
  title       String? // acum este opțional
  description String? // la fel
  tags        String[] // rămâne obligatoriu, dar vom trimite [] by default
  createdAt   DateTime @default(now())
  location    String?
}
